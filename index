    <script>
        // Countdown logic
        let count = 5;
        const countdownEl = document.getElementById('countdown');
        const postcardContainer = document.getElementById('postcardContainer');
        const bigConfettiContainer = document.getElementById('bigConfettiContainer');
        const body = document.body;

        const countdownInterval = setInterval(() => {
            count--;
            if (count > 0) {
                countdownEl.textContent = `Blow in ${count} second${count !== 1 ? 's' : ''}`;
            } else {
                clearInterval(countdownInterval);
                countdownEl.classList.add('hidden');

                // Blow out candle - darken background
                setTimeout(() => {
                    body.classList.add('blown');
                }, 300);

                // Flip card
                setTimeout(() => {
                    postcardContainer.classList.add('flip');
                }, 500);

                // Trigger big confetti
                setTimeout(() => {
                    createBigConfetti();
                }, 500);
            }
        }, 1000);

        function createBigConfetti() {
            bigConfettiContainer.classList.add('active');

            const colors = [
                '#FF6B6B', '#4ECDC4', '#FFE66D', '#95E1D3', '#F38181',
                '#AA96DA', '#FCBAD3', '#A8E6CF', '#FFD3B6', '#FF8B94',
                '#A8D8EA', '#FFAAA5', '#B4F8C8', '#FBE7C6', '#C7CEEA'
            ];

            // Create confetti from left side
            for (let i = 0; i < 15; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'big-confetti from-left';
                confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.top = `${20 + Math.random() * 60}%`;
                confetti.style.setProperty('--x-end', `${300 + Math.random() * 400}px`);
                confetti.style.setProperty('--y-end', `${-200 + Math.random() * 400}px`);
                confetti.style.animationDelay = `${Math.random() * 0.3}s`;
                bigConfettiContainer.appendChild(confetti);
            }

            // Create confetti from right side
            for (let i = 0; i < 15; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'big-confetti from-right';
                confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.top = `${20 + Math.random() * 60}%`;
                confetti.style.setProperty('--x-end', `${-300 - Math.random() * 400}px`);
                confetti.style.setProperty('--y-end', `${-200 + Math.random() * 400}px`);
                confetti.style.animationDelay = `${Math.random() * 0.3}s`;
                bigConfettiContainer.appendChild(confetti);
            }
        }
    </script>
</body>
</html>
